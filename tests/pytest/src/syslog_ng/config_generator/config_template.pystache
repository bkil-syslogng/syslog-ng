@version: {{version}}
@include "scl.conf"
options{
{{#global_options}}
    {{option_name}}({{option_value}});
{{/global_options}}
};
{{#source_groups}}
source {{source_group_name}} {
    {{#source_drivers}}
    {{source_driver_name}} (
{{#empty_driver}}{{/empty_driver}}
{{#driver_options}}
    {{#non_tls_options}}
        {{#with_option_name}}
        {{option_name}}({{option_value}})
        {{/with_option_name}}
        {{#without_option_name}}
        {{option_value}}
        {{/without_option_name}}
    {{/non_tls_options}}
    {{#tls_options}}
        tls(
            {{#tls_options2}}
            {{option_name}}({{option_value}})
            {{/tls_options2}}
        )
    {{/tls_options}}
{{/driver_options}}
    );
    {{/source_drivers}}
};
{{/source_groups}}

{{#parser_groups}}
parser {{parser_group_name}} {
    {{#parser_drivers}}
    {{parser_driver_name}} (
{{#driver_options}}
        {{#with_option_name}}
        {{option_name}}({{option_value}})
        {{/with_option_name}}
{{/driver_options}}
    );
   {{/parser_drivers}}
};
{{/parser_groups}}

{{#destination_groups}}
destination {{destination_group_name}} {
    {{#destination_drivers}}
    {{destination_driver_name}} (
{{#empty_driver}}{{/empty_driver}}
{{#driver_options}}
    {{#non_tls_options}}
        {{#with_option_name}}
        {{option_name}}({{option_value}})
        {{/with_option_name}}
        {{#without_option_name}}
        {{option_value}}
        {{/without_option_name}}
    {{/non_tls_options}}
    {{#tls_options}}
        tls(
            {{#tls_options2}}
            {{option_name}}({{option_value}})
            {{/tls_options2}}
        )
    {{/tls_options}}
{{/driver_options}}
    );
    {{/destination_drivers}}
};
{{/destination_groups}}

{{#logpath}}
log{
    {{#sources}}
    source({{.}});
    {{/sources}}
    {{#parsers}}
    parser({{.}});
    {{/parsers}}
    {{#destinations}}
    destination({{.}});
    {{/destinations}}
};
{{/logpath}}
